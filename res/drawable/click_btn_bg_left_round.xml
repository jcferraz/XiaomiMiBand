<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/content_color_darker" />
            <corners android:topLeftRadius="@dimen/btn_bg_radius" android:bottomLeftRadius="@dimen/btn_bg_radius" />
            <padding android:left="@dimen/round_bg_stroke" android:top="@dimen/round_bg_stroke" android:right="@dimen/round_bg_stroke" android:bottom="@dimen/round_bg_stroke" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/content_inner_color" />
            <corners android:topLeftRadius="@dimen/btn_bg_radius" android:bottomLeftRadius="@dimen/btn_bg_radius" />
            <padding android:left="@dimen/round_bg_stroke" android:top="@dimen/round_bg_stroke" android:right="@dimen/round_bg_stroke" android:bottom="@dimen/round_bg_stroke" />
        </shape>
    </item>
</selector>