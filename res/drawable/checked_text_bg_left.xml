<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/item_bg_pressed" />
            <corners android:topLeftRadius="@dimen/round_bg_radius" android:bottomLeftRadius="@dimen/round_bg_radius" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/checked_true" />
            <corners android:topLeftRadius="@dimen/round_bg_radius" android:bottomLeftRadius="@dimen/round_bg_radius" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/checked_false" />
            <corners android:topLeftRadius="@dimen/round_bg_radius" android:bottomLeftRadius="@dimen/round_bg_radius" />
        </shape>
    </item>
</selector>